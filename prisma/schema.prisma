generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model form {
  id String @id @default(uuid())
  name String 
  decription String
  status  STATUS @default(ACTIVE)
  formField formField[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}




model formField {
  id String @id @default(uuid())
  type FORM_FIELD_TYPE
  label String 
  choices choice[]
  correct_answer String
  answer answer[]
  form form @relation(fields:[formId],references:[id])
  formId String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}


model choice {
  id String @id @default(uuid())
  name String
  parent formField @relation(fields:[formFieldId],references: [id])
  formFieldId String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model answer {
  id String @id @default(uuid())
  formFieldType FORM_FIELD_TYPE
  content String
  formField formField @relation(fields: [formFieldId],references: [id])
  formFieldId String


}




enum FORM_FIELD_TYPE {
  SELECT
  TEXT_INPUT
  RADIO
  TEXT_AREA
  RANGE
}

enum STATUS {
  ACTIVE
  ENACTIVE
} 