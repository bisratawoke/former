generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model form {
  id String @id @default(uuid())
  name String 
  decription String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}


model formField {
  id String @id @default(uuid())
  type FORM_FIELD_TYPE
  question String
  choices choice[]
  correct_answer String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}


model choice {
  id String @id @default(uuid())
  name String
  parent formField @relation(fields:[formFieldId],references: [id])
  formFieldId String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}



enum FORM_FIELD_TYPE {
  SELECT
  TEXT_INPUT
  RADIO
  TEXT_AREA
  RANGE
}
